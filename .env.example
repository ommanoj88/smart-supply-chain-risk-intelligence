# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smart_supply_chain
DB_USERNAME=supply_user
DB_PASSWORD=supply_pass_dev

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=smartSupplyChainSecretKey2024!@#$%^&*()
JWT_EXPIRATION=86400000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost

# Server Configuration
BACKEND_PORT=8080
FRONTEND_PORT=3000
PROXY_PORT=80
PROXY_SSL_PORT=443

# Frontend Configuration
FRONTEND_API_URL=http://localhost:8080
FRONTEND_WS_URL=ws://localhost:8080

# Logging Configuration
LOG_LEVEL=DEBUG
DEBUG_SQL=true

# Spring Profile
SPRING_PROFILE=development

# External API Keys (for future use)
DHL_API_KEY=your-dhl-api-key
FEDEX_API_KEY=your-fedex-api-key
UPS_API_KEY=your-ups-api-key
OPENWEATHER_API_KEY=your-weather-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@supplychainrisk.com

# Firebase Configuration (if using Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Security Configuration
ENABLE_SECURITY=true
REQUIRE_HTTPS=false

# Monitoring and Observability
ENABLE_METRICS=true
METRICS_ENDPOINT=/actuator/metrics
HEALTH_ENDPOINT=/health

# File Upload Configuration
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB
UPLOAD_PATH=./uploads

# Cache Configuration
CACHE_TTL=3600
ENABLE_CACHE=true